SRCS=string.c
OBJ_DIR=../../obj/util
OBJS=$(SRCS:%.c=$(OBJ_DIR)/%.o)

####################################################################################################
##	tools configuration
####################################################################################################
INCLUDES=-I. -I..

####################################################################################################
##	make rules -- do not modify form here
####################################################################################################
.SUFFIXES: .c .o

all: dirs $(OBJS)

clean:
	@rm -f ${OBJS}

dirs:
	mkdir -p $(OBJ_DIR)

$(OBJ_DIR)/%.o: %.c
	${CC} -o $@ -c ${CCFLAGS} ${INCLUDES} $<
